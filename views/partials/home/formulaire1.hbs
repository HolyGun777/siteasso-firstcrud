{{!-- boucle permettant d afficher les elements dans la db a la suite des autres --}}
<div>
     <div class="container">
          <div class="d-flex justify-content-between m-2">
               {{#each dbstage }}
               <div class="col">
                         <div class="d-flex justify-content-center">{{ upper this.titre }}</div>
                         <div>{{ truncStr this.text 60 }}</div>
                    <a href="/stage/{{ this.idstage }}" class="btn btn-primary"> Voir + </a>
               </div>
               {{/each }}
          </div>
     </div>
     {{!--Envois de mail a l admin--}}
     <div class="container">
          <h2 class="d-flex justify-content-center">Envoyer un message a l administrateur</h2>
          <form action="/contact" method="post">
               <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp">
               </div>
               <div class="mb-3">
                    <label for="inputZip" class="form-label">Message</label>
                    <input type="text" class="form-control" name="message">
               </div>
               <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Envoyer</button>
               </div>
          </form>
     </div>

     <h1 class="d-flex justify-content-center"> Stage du Mans du XX/XX/XX au XX/XX/XX</h1>

     <div class="container">
          <div class="d-flex justify-content-center">
               <img src="/assets/pics/lemans.jpg" class="d-block w-100" alt="">
          </div>
     </div>
</div>