{{!-- boucle permettant d afficher les elements dans la db a la suite des autres --}}
<div class="container">
  <div class="d-flex justify-content-center">
    <h1>Stages et evenements</h1>
  </div>
</div>
<div class="container">
     <div class="d-flex d-flex justify-content-center m-2 row">
          {{#each dbstage }}
          <div class="card mt-2" style="width: 18rem;">
               <div class="card-body">
                    <div class="d-flex justify-content-center">
                         <h5 class="card-title"> {{ upper this.titre }}</h5>
                    </div>
                    <p class="card-text"> {{ truncStr this.text 50}}</p>
                    <a href="/stage/{{ this.idstage }}" class="btn btn-primary">Voir +</a>
               </div>
          </div>
          {{/each }}
     </div>
</div>

{{!--Envois de mail a l admin--}}
<div class="container">
     <h2 class="d-flex justify-content-center">Envoyer un message a l'administrateur</h2>
     <form action="/contact" method="post">
          <div class="mb-3">
               <label for="exampleInputEmail1" class="form-label">Votre adresse mail</label>
               <input type="email" class="form-control" name="email" aria-describedby="emailHelp">
          </div>
          <div class="mb-3">
               <label for="inputZip" class="form-label">Message</label>
               <input type="text" class="form-control" name="message">
          </div>
          <div class="d-flex justify-content-center">
               <button type="submit" class="btn btn-primary">Envoyer</button>
          </div>
     </form>
</div>

<div class="d-flex justify-content-center mt-2">
     <img src="/assets/pics/logoScript.png" alt="">
</div>