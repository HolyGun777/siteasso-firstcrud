<div class="container">
  <div class="row">
    <h3>Gestion Stages</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Titre</th>
          <th scope="col">Text</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">

        {{!-- {{#each dbArticles }} --}}
        <tr>
          <th scope="row">{{ @index }}</th>
          <td> {{ this.titre }} </td>
          <td> {{ this.text }} </td>
          <td>

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
              data-bs-target="#modalArticles-{{this.id}}">
              Open
            </button>

          </td>
        </tr>

        <!-- Modal -->
        <div class="modal fade" id="modalArticles-{{this.id}}" tabindex="-1" aria-labelledby="modalArticlesLabel"
          aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="modalArticlesLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <h4> {{ this.titre }}</h4>
                <p> {{ this.text }} </p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>

        {{!-- {{/each }} --}}



      </tbody>
    </table>
  </div>
</div>